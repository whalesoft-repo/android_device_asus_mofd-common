# SPECTRUM KERNEL MANAGER
# Ramdisk file for profile based kernel management
# Implimentation inspired by Franco's fku profiles

# Initialization
on property:sys.boot_completed=1
   # Set default profile on first boot
   exec u:r:init:s0 root root -- /init.spectrum.sh
   exec u:r:su:s0 root root -- /init.spectrum.sh
   # Enable Spectrum support
   setprop spectrum.support 1
   # Add kernel name
   setprop persist.spectrum.kernel Hololite

# Balance (default profile)
on property:persist.spectrum.profile=0

# Performance
on property:persist.spectrum.profile=1
    write /sys/devices/system/cpu/cpufreq/ondemand/up_threshold 70
    write /sys/devices/system/cpu/cpufreq/ondemand/powersave_bias 0
    write /sys/devices/system/cpu/cpufreq/ondemand/sampling_rate 50000
    write /sys/module/workqueue/parameters/power_efficient N
    write /sys/devices/virtual/misc/batterylifeextender/charging_limit 98
    write /sys/block/mmcblk0/queue/scheduler zen
    write /sys/block/mmcblk0/queue/read_ahead_kb 1536
    write /sys/block/mmcblk0/queue/iostats 0
    write /sys/module/sync/parameters/fsync_enabled Y

# Battery
on property:persist.spectrum.profile=2
    write /sys/devices/system/cpu/cpufreq/ondemand/up_threshold 70
    write /sys/devices/system/cpu/cpufreq/ondemand/powersave_bias 0
    write /sys/devices/system/cpu/cpufreq/ondemand/sampling_rate 50000
    write /sys/devices/virtual/misc/batterylifeextender/charging_limit 98
    write /sys/block/mmcblk0/queue/iostats 0
    write /sys/module/sync/parameters/fsync_enabled Y
    write /sys/module/workqueue/parameters/power_efficient Y
    write /sys/block/mmcblk0/queue/read_ahead_kb 1280
    write /sys/module/blu_plug/parameters/enabled 1
    write /sys/module/blu_plug/parameters/min_online 4
    write /sys/module/blu_plug/parameters/up_threshold 5
    write /sys/module/blu_plug/parameters/down_timer_cnt 2
    chmod 644 /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq 1833000
    chmod 444 /sys/devices/system/cpu/cpu2/cpufreq/scaling_max_freq
    chmod 644 /sys/devices/system/cpu/cpu3/cpufreq/scaling_max_freq
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_max_freq 1833000
    chmod 444 /sys/devices/system/cpu/cpu3/cpufreq/scaling_max_freq
    chmod 644 /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq 333000
    chmod 444 /sys/devices/system/cpu/cpu2/cpufreq/scaling_min_freq
    chmod 644 /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq 333000
    chmod 444 /sys/devices/system/cpu/cpu3/cpufreq/scaling_min_freq
    chmod 644 /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq 1833000
    chmod 444 /sys/devices/system/cpu/cpu0/cpufreq/scaling_max_freq
    chmod 644 /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq 1833000
    chmod 444 /sys/devices/system/cpu/cpu1/cpufreq/scaling_max_freq
    chmod 644 /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq 333000
    chmod 444 /sys/devices/system/cpu/cpu0/cpufreq/scaling_min_freq
    chmod 644 /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq 333000
    chmod 444 /sys/devices/system/cpu/cpu1/cpufreq/scaling_min_freq
    write /sys/devices/system/cpu/cpufreq/ondemand/ignore_nice_load 1
    chmod 644 /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor
    write /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor interactive
    chmod 444 /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor
    chmod 644 /sys/devices/system/cpu/cpu1/cpufreq/scaling_governor
    write /sys/devices/system/cpu/cpu1/cpufreq/scaling_governor interactive
    chmod 444 /sys/devices/system/cpu/cpu1/cpufreq/scaling_governor
    chmod 644 /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor
    write /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor interactive
    chmod 444 /sys/devices/system/cpu/cpu2/cpufreq/scaling_governor
    write /sys/devices/system/cpu/cpu1/online 1
    chmod 644 /sys/devices/system/cpu/cpu3/cpufreq/scaling_governor
    write /sys/devices/system/cpu/cpu3/cpufreq/scaling_governor interactive
    chmod 444 /sys/devices/system/cpu/cpu3/cpufreq/scaling_governor
    write /sys/devices/system/cpu/cpufreq/interactive/go_hispeed_load 100
    write /sys/devices/system/cpu/cpufreq/interactive/above_hispeed_delay 8000
    write /sys/devices/system/cpu/cpufreq/interactive/hispeed_freq 833000
    write /sys/devices/system/cpu/cpufreq/interactive/io_is_busy 1
    write /sys/devices/system/cpu/cpufreq/interactive/min_sample_time 33000
    write /sys/devices/system/cpu/cpufreq/interactive/sleep_max_freq 583000
    write /sys/devices/system/cpu/cpufreq/interactive/timer_rate 25000
    write /sys/devices/system/cpu/cpufreq/interactive/timer_slack 25000
    write /sys/devices/system/cpu/cpufreq/interactive/touchboostpulse_duration 3200
    write /sys/devices/system/cpu/cpufreq/interactive/touchboost_freq 500000
    write /sys/devices/system/cpu/cpufreq/interactive/target_loads "88 333000:35 416000:40 500000:50 583000:60 666000:70 750000:80 833000:82 1250000:86 1416000:90 1833000:92"
    write /sys/block/mmcblk0/queue/scheduler tripndroid
    write /sys/block/mmcblk0/queue/rq_affinity 1
    write /proc/sys/kernel/random/read_wakeup_threshold 128
    write /proc/sys/kernel/random/write_wakeup_threshold 128
    write /sys/devices/platform/dfrgx/devfreq/dfrgx/governor simple_ondemand
    write /sys/devices/platform/dfrgx/devfreq/dfrgx/min_freq 200000

# Gaming
on property:persist.spectrum.profile=3
    write /sys/devices/system/cpu/cpufreq/ondemand/up_threshold 70
    write /sys/devices/system/cpu/cpufreq/ondemand/powersave_bias 0
    write /sys/devices/system/cpu/cpufreq/ondemand/sampling_rate 50000
    /sys/devices/virtual/misc/batterylifeextender/charging_limit 98
    write /sys/block/mmcblk0/queue/iostats 0
    write /sys/module/sync/parameters/fsync_enabled Y
    write /sys/devices/system/cpu/cpufreq/ondemand/ignore_nice_load 0
    write /sys/module/workqueue/parameters/power_efficient Y
    write /proc/sys/kernel/random/read_wakeup_threshold 256
    write /proc/sys/kernel/random/write_wakeup_threshold 256
    write /sys/block/mmcblk0/queue/read_ahead_kb 1280
    write /sys/block/mmcblk0/queue/rq_affinity 0
    write /sys/module/blu_plug/parameters/enabled 1
    write /sys/module/blu_plug/parameters/min_online 4
    write /sys/module/blu_plug/parameters/up_threshold 5
    write /sys/module/blu_plug/parameters/down_timer_cnt 2